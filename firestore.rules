rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(ownerId) {
      return isAuthenticated() && request.auth.uid == ownerId;
    }
    
    // Devices collection
    match /devices/{deviceId} {
      // TEMPORARY: Allow all access for development (no auth required)
      // TODO: Re-enable authentication before production
      allow read, write: if true;
      
      // Commands subcollection
      match /commands/{commandId} {
        // TEMPORARY: Allow all access for development
        allow read, write: if true;
      }
    }
    
    // Knowledge base (for chatbot)
    match /knowledgeBase/{articleId} {
      // Anyone can read knowledge base
      allow read: if true;
      
      // Only admins can write (set this up separately)
      allow write: if false;
    }
    
    // Chat sessions
    match /chatSessions/{sessionId} {
      // Users can only access their own sessions
      allow read, write: if isAuthenticated() 
        && request.auth.uid == resource.data.userId;
      
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid;
    }
  }
}
