rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(ownerId) {
      return isAuthenticated() && request.auth.uid == ownerId;
    }
    
    // Devices collection
    match /devices/{deviceId} {
      // Anyone authenticated can read devices
      allow read: if isAuthenticated();
      
      // Only the owner can write to their device
      allow create: if isAuthenticated() 
        && request.resource.data.ownerId == request.auth.uid;
      
      allow update, delete: if isAuthenticated() 
        && resource.data.ownerId == request.auth.uid;
      
      // Commands subcollection
      match /commands/{commandId} {
        // Anyone authenticated can read commands
        allow read: if isAuthenticated();
        
        // Authenticated users can create commands (for learning mode)
        // ESP32 will also need write access (via service account)
        allow create: if isAuthenticated();
        
        // Only device owner can update/delete commands
        allow update, delete: if isAuthenticated() 
          && get(/databases/$(database)/documents/devices/$(deviceId)).data.ownerId == request.auth.uid;
      }
      
      // Queue subcollection
      match /queue/{queueId} {
        // Anyone authenticated can read their device's queue
        allow read: if isAuthenticated();
        
        // Authenticated users can enqueue commands
        allow create: if isAuthenticated();
        
        // ESP32 (via service account) will update status
        // Users can also update to cancel
        allow update: if isAuthenticated();
        
        // Allow deletion after processing (cleanup)
        allow delete: if isAuthenticated();
      }
    }
    
    // Knowledge base (for chatbot)
    match /knowledgeBase/{articleId} {
      // Anyone can read knowledge base
      allow read: if true;
      
      // Only admins can write (set this up separately)
      allow write: if false;
    }
    
    // Chat sessions
    match /chatSessions/{sessionId} {
      // Users can only access their own sessions
      allow read, write: if isAuthenticated() 
        && request.auth.uid == resource.data.userId;
      
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid;
    }
  }
}
