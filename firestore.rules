rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(ownerId) {
      return isAuthenticated() && request.auth.uid == ownerId;
    }

    function isOwner'sData() {
      return isAuthenticated() && request.auth.uid == resource.data.ownerId;
    }
    
    // Device Claims collection
    // Users can only read their own claims
    match /deviceClaims/{claimId} {
      allow read: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update, delete: if false;
    }
    
    // Devices collection
    match /devices/{deviceId} {
      // Require authentication for all operations
      allow read, write: if isAuthenticated();
      // Note: Client should filter by ownerId in queries for production
      
      // Commands subcollection
      match /commands/{commandId} {
        allow read, write: if isAuthenticated();
      }
    }
    
    // Knowledge base (for chatbot)
    match /knowledgeBase/{articleId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Chat sessions
    match /chatSessions/{sessionId} {
      allow read, write: if isAuthenticated() 
        && request.auth.uid == resource.data.userId;
      
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid;
    }
  }
}
